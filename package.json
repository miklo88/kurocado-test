{
  "name": "@kurocado-studio/styleguide-remix-template",
  "version": "0.0.0-semantically-released",
  "private": true,
  "type": "module",
  "license": "MIT",
  "scripts": {
    "build": "remix vite:build",
    "commitlint": "pnpm exec commitlint --edit .git/COMMIT_EDITMSG",
    "dev": "remix vite:dev",
    "eslint-check": "eslint --max-warnings=0 . --debug",
    "eslint-fix": "eslint --max-warnings=0 . --fix --no-warn-ignored",
    "lint": "eslint --max-warnings=0 . --no-warn-ignored",
    "prepare": "husky install",
    "prettier-check": "prettier --check .",
    "prettier-fix": "prettier --check . --write",
    "semantic-release": "semantic-release",
    "start": "remix-serve ./build/server/index.js",
    "test": "vitest run --coverage",
    "typecheck": "tsc"
  },
  "lint-staged": {
    "*": [
      "pnpm run prettier-fix"
    ],
    "**/*.{ts,tsx}": [
      "pnpm run eslint-fix",
      "pnpm run lint"
    ]
  },
  "dependencies": {
    "@remix-run/node": "^2.15.3",
    "@remix-run/react": "^2.15.3",
    "autoprefixer": "^10.4.20",
    "isbot": "^5.1.22",
    "lodash-es": "^4.17.21",
    "postcss": "^8.5.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.5.9",
    "@kurocado-studio/qa": "1.1.1",
    "@kurocado-studio/styleguide": "2.2.10",
    "@remix-run/dev": "^2.15.3",
    "@remix-run/serve": "^2.15.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.13.10",
    "@types/react": "18",
    "@types/react-dom": "^18.3.5",
    "@vitest/coverage-v8": "^3.0.5",
    "commitlint": "^19.7.1",
    "eslint": "^9.22.0",
    "husky": "^9.1.7",
    "import": "^0.0.6",
    "lint-staged": "^15.4.3",
    "prettier": "^3.4.2",
    "semantic-release": "^23.1.1",
    "typescript": "^5.7.3",
    "vite": "^6.0.11",
    "vite-plugin-dts": "^4.5.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.5"
  },
  "engines": {
    "node": ">=20"
  }
}
